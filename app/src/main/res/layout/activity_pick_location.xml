<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.deynek.app.activity.find.PickLocationActivity"
    android:weightSum="20"
    android:orientation="vertical"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="5"
        android:orientation="vertical">

        <fragment
            class="com.google.android.gms.maps.MapFragment"
            android:id="@+id/map"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@color/background"
        android:layout_weight="15"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Please click on the area that you want to park \n your car. We will match you with a driver!"
            android:gravity="center"
            android:textColor="@color/textViewDefault"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/buttonMatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Match me!"
            android:padding="20dp"
            android:onClick="onMatchButtonClick"
            android:background="@drawable/rounded_corners"
            android:drawableLeft="@drawable/find_spot"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:layout_margin="10dp"
            />


    </LinearLayout>
</LinearLayout>
